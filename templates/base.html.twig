<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				MARM-X-TURE
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://bootswatch.com/4/superhero/bootstrap.min.css"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">


				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav mr-auto">

						<a class="navbar-brand" href="{{ path('home')}}">Marm-X-Ture</a>
						<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>

						<li class="nav-item">
							<a class="nav-link" href="{{ path('main')}}">Recettes</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('create')}}">Proposer une recette</a>
						</li>
						{% if app.user %}

							<li class="nav-item">
								<a class="nav-link" href="#">Profil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_logout') }}">Se d√©connecter</a>
							</li>
						{% else %}

							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
							</li>
						{% endif %}
				{% if is_granted("ROLE_ADMIN") %}
				<li class="nav-item">
								<a class="nav-link" href="{{ path('admin') }}">Administration</a>
							</li>
				{% endif %}
					</ul>

				</div>
			</nav>

			<div class="container mb-5"> {% block body %}{% endblock %}
				</div>

				{% block javascripts %}{% endblock %}
			</body>
		</html>
